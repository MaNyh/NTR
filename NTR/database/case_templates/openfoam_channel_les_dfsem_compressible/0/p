FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "1";
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 101325;

boundaryField
{
    bottomWall
    {
        type            zeroGradient;
    }
    topWall
    {
        type            zeroGradient;
    }
    sides_half0
    {
        type            cyclic;
    }
    sides_half1
    {
        type            cyclic;
    }
    INLET
    {
        type            waveTransmissive;
        gamma           1.4;
        value           uniform 101325;
    }
    OUTLET
    {
        type            waveTransmissive;
        gamma           1.4;
        fieldInf        101325;
        lInf            0.01;
        value           uniform 101325;
    }

}


