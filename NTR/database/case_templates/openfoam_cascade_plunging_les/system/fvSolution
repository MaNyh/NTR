FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    pcorr
    {
        solver PCG;
        preconditioner DIC;
        tolerance 1e-3;
        relTol 0;
    }
    p
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-7;
        relTol          0.01;
    }

    pFinal
    {
        $p;
        //smoother        DICGaussSeidel;
        //tolerance       1e-07;
        relTol          0;
    }

    "(U|k)"
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-7;
        relTol          0.1;
    }

    "(U|k)Final"
    {
        $U;
        relTol          0;
    }
}

PIMPLE
{
    //momentumPredictor yes;
    //nOuterCorrectors 1;
    nCorrectors     2;
    nNonOrthogonalCorrectors 1;
}


