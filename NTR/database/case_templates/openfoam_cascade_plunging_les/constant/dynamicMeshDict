dynamicFvMesh   dynamicMotionSolverFvMesh;

motionSolverLibs ( "libfvMotionSolvers.so" );

solver solidBody;

solidBodyCoeffs
{
    //cellZone        nearPlate;

    patches           (BLADE_WALL)   

    innerDistance     0.000;

    OuterDistance     0.012;

    solidBodyMotionFunction  oscillatingLinearMotion;

    oscillatingLinearMotionCoeffs
    {
        amplitude       (0 0.005 0);
        omega           314.159265359; // rad/s  (100 rps)
    }
}


